                            <td>@dt.CompMedianProg</td>
                            <td>@dt.CompMedianSR</td>
                            <td>@dt.CompMedianAlign</td>
                            <td>@dt.CompMedianNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr style="font-weight:bolder;" class="highlighted">
                            <td scope="row">Subtotal</td>
                            <td>@dt.CompSubLeader</td>
                            <td>@dt.CompSubProg</td>
                            <td>@dt.CompSubSR</td>
                            <td>@dt.CompSubAlign</td>
                            <td>@dt.CompSubNon</td>
