                    <select id="#ddlFY">
                        @foreach (var dtFY in Model)
                        {
                            <option>@dtFY.FY</option>
                        }
                    </select>*@

                    @foreach (var dt in Model)
                    {
                        <tr class="odd">
                            <th rowspan="4"><b>@dt.BasicCount<br /> Basic Centers</b></th>
                            <td>High</td>
                            <td>@dt.BasicHighLeader</td>
                            <td>@dt.BasicHighProg</td>
                            <td>@dt.BasicHighSR</td>
                            <td>@dt.BasicHighAlign</td>
                            <td>@dt.BasicHighNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr>
                            <td>Low</td>
                            <td>@dt.BasicLowLeader</td>
                            <td>@dt.BasicLowProg</td>
                            <td>@dt.BasicLowSR</td>
                            <td>@dt.BasicLowAlign</td>
                            <td>@dt.BasicLowNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr class="odd">
                            <td >Median</td>
                            <td>@dt.BasicMedianLeader</td>
                            <td>@dt.BasicMedianProg</td>
                            <td>@dt.BasicMedianSR</td>
                            <td>@dt.BasicMedianAlign</td>
                            <td>@dt.BasicMedianNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr style="font-weight:bolder;" class="highlighted">
                            <td scope="row">Subtotal</td>
                            <td>@dt.BasicSubLeader</td>
                            <td>@dt.BasicSubProg</td>
                            <td>@dt.BasicSubSR</td>
                            <td>@dt.BasicSubAlign</td>
                            <td>@dt.BasicSubNon</td>
                            <td>@dt.FY</td>
                        </tr>

                        <tr>
                            <th rowspan="4"><b>@dt.ClinicalCount<br />Clinical Centers</b></th>
                            <td>High</td>
                            <td>@dt.ClinicalHighLeader</td>
                            <td>@dt.ClinicalHighProg</td>
                            <td>@dt.ClinicalHighSR</td>
                            <td>@dt.ClinicalHighAlign</td>
                            <td>@dt.ClinicalHighNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr>
                            <td>Low</td>
                            <td>@dt.ClinicalLowLeader</td>
                            <td>@dt.ClinicalLowProg</td>
                            <td>@dt.ClinicalLowSR</td>
                            <td>@dt.ClinicalLowAlign</td>
                            <td>@dt.ClinicalLowNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr class="odd">
                            <td>Median</td>
                            <td>@dt.ClinicalMedianLeader</td>
                            <td>@dt.ClinicalMedianProg</td>
                            <td>@dt.ClinicalMedianSR</td>
                            <td>@dt.ClinicalMedianAlign</td>
                            <td>@dt.ClinicalMedianNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr style="font-weight:bolder;" class="highlighted">
                            <td scope="row">Subtotal</td>
                            <td>@dt.ClinicalSubLeader</td>
                            <td>@dt.ClinicalSubProg</td>
                            <td>@dt.ClinicalSubSR</td>
                            <td>@dt.ClinicalSubAlign</td>
                            <td>@dt.ClinicalSubNon</td>
                            <td>@dt.FY</td>
                        </tr>

                        <tr class="odd">
                            <th rowspan="4" scope="rowgroup"><b>40<br />Comprehensive Centers</b></th>
                            <td>High</td>
                            <td>@dt.CompHighLeader</td>
                            <td>@dt.CompHighProg</td>
                            <td>@dt.CompHighSR</td>
                            <td>@dt.CompHighAlign</td>
                            <td>@dt.CompHighNon</td>
                            <td>@dt.FY</td>
                        </tr>
                        <tr>
                            <td>Low</td>
                            <td>@dt.CompLowLeader</td>
                            <td>@dt.CompLowProg</td>
                            <td>@dt.CompLowSR</td>
                            <td>@dt.CompLowAlign</td>
